{
	"name": "vscode-tfvc",
	"displayName": "TFVC for VS Code",
	"description": "Provide support in TFVC (Team Foundation Version Control) to Visual Studio Code",
	"version": "0.1.1",
	"publisher": "ShPelles",
	"repository": "https://github.com/ShPelles/vscode-tfvc",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"SCM Providers"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-tfvc.checkoutCurrentFile",
				"title": "TFVC: Check out the current file",
				"enablement": "editorFocus"
			},
			{
				"command": "vscode-tfvc.checkInCurrentFile",
				"title": "TFVC: Check in the current file",
				"enablement": "editorFocus"
			},
			{
				"command": "vscode-tfvc.undoCurrentFile",
				"title": "TFVC: Cancel the pending changes in the current file",
				"enablement": "editorFocus"
			}
		],
		"configuration": {
			"title": "TFVC",
			"properties": {
				"vscode-tfvc.tfExePath": {
					"type": "string",
					"default": "",
					"description": "Full path of 'TF.EXE'.",
					"scope": "machine"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
